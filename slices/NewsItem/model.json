{
  "id": "news_item",
  "type": "SharedSlice",
  "name": "NewsItem",
  "description": "NewsItem",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default",
      "imageUrl": "",
      "primary": {
        "item": {
          "type": "Group",
          "config": {
            "label": "Item",
            "repeat": true,
            "fields": {
              "image": {
                "type": "Image",
                "config": {
                  "label": "Image",
                  "constraint": {
                    "width": 600
                  },
                  "thumbnails": []
                }
              },
              "title": {
                "type": "Text",
                "config": {
                  "label": "Title",
                  "placeholder": ""
                }
              },
              "description": {
                "type": "StructuredText",
                "config": {
                  "label": "Description",
                  "placeholder": "",
                  "allowTargetBlank": true,
                  "multi": "paragraph,hyperlink,strong,em,list-item,o-list-item"
                }
              },
              "button": {
                "type": "Link",
                "config": {
                  "label": "Button",
                  "placeholder": "",
                  "select": null,
                  "allowTargetBlank": true,
                  "allowText": true,
                  "repeat": false
                }
              }
            }
          }
        },
        "upcoming": {
          "type": "Group",
          "config": {
            "label": "Upcoming",
            "repeat": true,
            "fields": {
              "event": {
                "type": "Link",
                "config": {
                  "label": "Event",
                  "select": "document",
                  "repeat": false,
                  "customtypes": [
                    {
                      "id": "event",
                      "fields": [
                        "title",
                        "image",
                        "date",
                        "time",
                        "description",
                        "intro",
                        "dates",
                        {
                          "id": "filter",
                          "fields": [
                            "filter",
                            "color"
                          ]
                        },
                        "preview_image"
                      ]
                    }
                  ]
                }
              }
            }
          }
        },
        "blog": {
          "type": "Group",
          "config": {
            "label": "Blog",
            "repeat": true,
            "fields": {
              "blog_title": {
                "type": "Text",
                "config": {
                  "label": "Blog Title",
                  "placeholder": ""
                }
              },
              "date": {
                "type": "Date",
                "config": {
                  "label": "Date",
                  "placeholder": ""
                }
              },
              "text": {
                "type": "StructuredText",
                "config": {
                  "label": "Text",
                  "placeholder": "",
                  "allowTargetBlank": true,
                  "multi": "paragraph,strong,em,hyperlink,list-item,o-list-item"
                }
              }
            }
          }
        }
      },
      "items": {}
    }
  ]
}