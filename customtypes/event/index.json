          "thumbnails": []
        }
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "Image",
          "constraint": {
            "width": 1080
          },
          "thumbnails": []
        }
      },
      "dates": {
        "type": "Text",
        "config": {
          "label": "Date(s)",
          "placeholder": ""
        }
      },
      "date": {
        "type": "Date",
        "config": {
          "label": "Date (for order)",
          "placeholder": ""
        }
      },
      "time": {
        "type": "Text",
        "config": {
          "label": "Time",
          "placeholder": ""
        }
      },
      "intro": {
        "type": "StructuredText",
        "config": {
          "label": "Intro",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,hyperlink,list-item,o-list-item,strong,em"
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,hyperlink,list-item,o-list-item,strong,em"
        }
      },
      "filter": {
        "type": "Group",
        "config": {
          "label": "Filter",
          "repeat": true,
          "fields": {
            "filter": {
              "type": "Text",
              "config": {
                "label": "Filter",
                "placeholder": ""
              }
            },
            "color": {
              "type": "Color",
              "config": {
                "label": "Color",
                "placeholder": ""
              }
            }
          }
        }
      },
      "long_description": {
        "type": "StructuredText",
        "config": {
          "label": "Long description (Left)",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em,hyperlink,list-item,o-list-item"
        }
      },
      "long_description2": {
        "type": "StructuredText",
        "config": {
          "label": "Long description (Right)",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em,hyperlink,list-item,o-list-item"
        }
