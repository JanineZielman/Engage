{
  "format": "page",
  "id": "event",
  "label": "Event",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "preview_image": {
        "type": "Image",
        "config": {
          "label": "Preview Image",
          "constraint": {
            "width": 1080,
            "height": 1080
